      "type":"text",
      "label":"Form Email Label",
      "default":"Your email"
    },
    {
      "id":"form_subject_label",
      "type":"text",
      "label":"Form Subject Label",
      "default":"Subject"
    },
    {
      "id":"form_body_label",
