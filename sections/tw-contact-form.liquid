      "default":"Send"
    },
    {
      "id":"address_label_1",
      "type":"text",
      "label":"Address Label 1",
      "default":"Address"
    },
    {
      "id":"address_value_1",
      "type":"text",
      "label":"Address Value 1",
      "default":"#1140 - 551 Sherling Pl. Port Coquitlam, BC V3B 0J6"
    },
    {
      "id":"address_location",
      "type":"text",
      "label":"Address Location",
      "default":"Pick up is availiable from this location"
    },
    {
      "id":"address_label_2",
      "type":"text",
      "label":"Address Label 2",
      "default":"Phone"
    },
    {
      "id":"address_value_2",
      "type":"text",
      "label":"Address Value 2",
      "default":"+1 778-917-5218"
    },
    {
      "id":"address_label_3",
      "type":"text",
      "label":"Address Label 3",
      "default":"Email"
    },
    {
      "id":"address_value_3",
      "type":"text",
      "label":"Address Value 3",
      "default":"info@taiwanway.ca"
    }
  ],
  "presets": [
    {
      "name": "tw-contact-form",
      "category": "Custom"
    }
  ]
}
{% endschema %}