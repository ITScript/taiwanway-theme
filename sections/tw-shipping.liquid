<div id="shipping" class="container mx-auto my-10 px-5 md:my-16 lg:max-w-[876]">
  <p class="text-center font-medium uppercase tracking-widest text-c1">
  {{ section.settings.heading_1 | escape }}
  </p>
  <p class="my-5 text-center text-4xl lowercase tracking-wide lg:text-5xl">
    {{ section.settings.heading_2 | escape }}
  </p>
  <p class="mx-auto max-w-[450] text-center">
    {{ section.settings.heading_3 | escape }}
  </p>
  <div class="my-5 divide-y divide-c2 border border-c2 md:my-12 md:flex md:divide-y-0 md:divide-x">
    <div class="flex items-center justify-between md:basis-1/2 px-5 py-3">
      <div>
        {{ section.settings.delivery_option_title_1 | escape }}
      </div>
      <div class="pl-5 font-medium lg:text-2xl">
        {{ section.settings.delivery_option_price_1 | escape }}
      </div>
    </div>
    <div class="flex items-center justify-between md:basis-1/2 px-5 py-3">
      <div>
        {{ section.settings.delivery_option_title_2 | escape }}
      </div>
      <div class="pl-5 font-medium lg:text-2xl">
        {{ section.settings.delivery_option_price_2 | escape }}
      </div>
    </div>
  </div>
  <img src="{{ 'tw_shipping.60455f4e.jpg' | asset_url }}" width="877" height="584" class="mx-auto w-full">
</div>
